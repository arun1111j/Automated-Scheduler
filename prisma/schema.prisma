// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// SQLite doesn't support enums, using String instead
// Valid values for TaskPriority: LOW, MEDIUM, HIGH, URGENT
// Valid values for TaskStatus: TODO, IN_PROGRESS, COMPLETED, CANCELLED
// Valid values for RecurrenceType: DAILY, WEEKLY, MONTHLY, YEARLY
// Valid values for NotificationType: TASK_DUE, EVENT_REMINDER, TASK_ASSIGNED, TASK_COMPLETED, GENERAL

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String?
  password      String?
  image         String?
  emailVerified DateTime?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  
  // Relations
  schedules     Schedule[]
  tasks         Task[]
  timeEntries   TimeEntry[]
  categories    Category[]
  notifications Notification[]
  reminders     Reminder[]
  accounts      Account[]
  sessions      Session[]
  notificationPreference NotificationPreference?

  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Category {
  id        String   @id @default(cuid())
  name      String
  color     String   @default("#3B82F6")
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks     Task[]
  schedules Schedule[]

  @@unique([userId, name])
  @@index([userId])
}

model Tag {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())

  tasks     Task[]

  @@unique([name])
}

model Schedule {
  id             String          @id @default(cuid())
  title          String
  description    String?
  startTime      DateTime
  endTime        DateTime
  allDay         Boolean         @default(false)
  location       String?
  userId         String
  categoryId     String?
  isRecurring    Boolean         @default(false)
  recurrenceType String?
  recurrenceEnd  DateTime?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  reminders Reminder[]

  @@index([userId])
  @@index([startTime])
  @@index([categoryId])
}

model Task {
  id          String       @id @default(cuid())
  title       String
  description String?
  dueDate     DateTime?
  priority    String @default("MEDIUM")
  status      String @default("TODO")
  completed   Boolean      @default(false)
  userId      String
  categoryId  String?
  position    Int          @default(0)
  estimatedTime Int?       // in minutes
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  completedAt DateTime?

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  category    Category?    @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  tags        Tag[]
  timeEntries TimeEntry[]
  reminders   Reminder[]

  @@index([userId])
  @@index([status])
  @@index([dueDate])
  @@index([categoryId])
}

model TimeEntry {
  id          String   @id @default(cuid())
  userId      String
  taskId      String?
  description String?
  startTime   DateTime
  endTime     DateTime?
  duration    Int?     // in minutes, calculated
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  task Task? @relation(fields: [taskId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([taskId])
  @@index([startTime])
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      String
  title     String
  message   String
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([read])
  @@index([createdAt])
}

model Reminder {
  id         String    @id @default(cuid())
  userId     String
  taskId     String?
  scheduleId String?
  reminderTime DateTime
  message    String
  sent       Boolean   @default(false)
  createdAt  DateTime  @default(now())

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  task     Task?     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  schedule Schedule? @relation(fields: [scheduleId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([reminderTime])
  @@index([sent])
}

model NotificationPreference {
  id        String   @id @default(cuid())
  userId    String   @unique
  email     Boolean  @default(true)
  push      Boolean  @default(false)
  reminderTiming String @default("1_HOUR")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}